
<div class="container">
  <h1 class="text-center">Create a restaurant</h1>
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <%= simple_form_for [@restaurant] do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
      <%= f.submit 'Update a restaurant', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
