
<div class="container">
  <h1 class="text-center">Create a review</h1>
  <div class="row">
    <div class="col-sm-offset-4 col-sm-4">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating %>
      <%= f.submit 'Create review', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
